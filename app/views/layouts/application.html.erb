<!DOCTYPE html>
<html>
  <head>
    <title>ChildHealthSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Child Health System</a>
      </div>
      <ul class="nav navbar-nav pull-right ">
        <% if current_user %>
          <% if current_user.role == "admin" %> 
            <li><%= link_to 'Hospitals', hospitals_path %></li>
            <li><%= link_to 'Managers', managers_path %></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">Babies Information <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Babies Record', babies_path %></li>
                <li><%= link_to "Vaccinations", vaccinations_path%></li>
                <li><%= link_to 'RiskFactors', risk_factors_path %></li>
                <li><%= link_to 'InfantFeeding', infant_feeding_labels_path %></li>
                <li><%= link_to 'Care', care_labels_path %></li>
                <li><%= link_to 'Import Data', babies_path(format: "csv") %></li>
              </ul>
            </li>
          <% elsif current_user.role == "manager"%>     
            <li><%= link_to 'Nurses', hospital_users_path(current_user.hospital) %></li>
          <% else current_user.role == "nurse"%>     
            <li><%= link_to 'Baby Account', hospital_user_babies_path(current_user.hospital, current_user) %></li>
            <li><%= link_to "vaccination",  new_baby_vaccination_path%></li>

            <li><%= link_to 'VitaminA suppliment',  new_baby_vitamin_path %></li>
          <% end %>
          <li><%= link_to 'SignOut',  destroy_user_session_path,{method: :delete} %></li>
        <% else %>
          <li><%= link_to 'Login',  new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
          <li><%= link_to 'SignUp', new_user_registration_path, class: "glyphicon glyphicon-user"  %></li>
        <% end %> 
      </ul>
    </nav>
    <div class="top-container">
      <%= render partial: "shared/flash_messages" %>
      <%= yield %>  
    </div>
  </body>
</html>
