  <div class="container">
  <div class="row">
   <div class="col-md-2 col-md-offset-12">
      <%= link_to "Back", managers_path, class: "btn btn-info" %>
    </div>
  </div>


<div class="container signup-container">
      <h1>SignUp Manager Account</h1>
      <br>
      <%= bootstrap_form_for @user, url: managers_path, local: true do |form| %>
      <div class="row">  
        <div class="col-md-6">
          <%= form.text_field :first_name,  placeholder:"Enter First Name",  icon: "user" %>
        </div>
        <div class="col-md-6">
          <%= form.text_field :last_name, placeholder: "Enter last Name",  icon: "user" %>
        </div>
      </div>
        <%= form.select :hospital_id, @hospitals, :prompt => 'Select hospital id' %>
        
        <%= form.email_field :email, placeholder: "User email" %>
        <%= form.password_field :password, placeholder: "password" %>
        <%= form.submit "Create Account", class: "btn btn-success btn-lg" %>
      <% end  %>         
    </div> 
</div>      
     
